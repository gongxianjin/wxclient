.header-box {
  height: 60rpx;
  display: flex;
  align-items: center;
  background: -webkit-linear-gradient(to right, rgb(97, 94, 248), rgb(39, 176, 250)); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, rgb(97, 94, 248), rgb(39, 176, 250)); /* 标准的语法 */
}
.container {
            position: absolute;
            top: 60px;
            width: 100%;
            overflow: auto;
        }
.header-back {
  z-index: 9;
  margin-left: 24rpx;
  width: 12rpx;
  height: 18rpx;
}

.header-title {
  top: 0;
  z-index: 1;
  position: absolute;
  height: 60rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16rpx;
  color: white;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 60rpx;
  display: flex;
  background-color: white;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #e9e9e9;
}

.footer > span {
  padding-left: 48rpx;
}

.footer > span > span {
  color: red;
  font-weight: 600;
  font-size: 20rpx;
}

.footer > view {
  width: 100rpx;
  text-align: center;
  line-height: 60rpx;
  color: white;
  font-size: 16rpx;
  font-weight: 500;
  background-color: #5869f7;
  border-top: 1rpx solid #5869f7;
}

.container-title {
  line-height: 70rpx;
  padding-left: 24rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.container-img {
  width: 100%;
  height: 150rpx;
  padding: 20rpx 1;
  border-bottom: 1rpx solid #e5e5e5;
}

.img {
  margin: 0 auto;
  display: block;
  width: 100rpx;
  height: 150rpx;
  top: 10rpx;
}
