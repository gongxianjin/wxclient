.header {
  width: 100%;
  height: 60px;
  align-items: center;
  font-size: 16px;
  color: #333;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #e9e9e9;
}

.header-left {
  margin-left: 24px;
}

.header-right {
  margin-right: 24px;
}

.header-box {
  height: 60px;
  display: flex;
  align-items: center;
  background: -webkit-linear-gradient(to right, rgb(97, 94, 248), rgb(39, 176, 250)); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, rgb(97, 94, 248), rgb(39, 176, 250)); /* 标准的语法 */
}

.header-title {
  top: 0;
  z-index: 1;
  position: absolute;
  height: 60px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  color: white;
}

.item {
  width: 32%;
  height: 150px;
  text-align: center;
  background-color: white;
  border-bottom: 1px solid #e9e9e9;
  border-right: 1px solid #e9e9e9;
  display: inline-block;
}

.item-img {
  margin: 0 auto;
  display: block;
  width: 130px;
  height: 120px;
}
.item-name{
  font-size:25rpx;
  top: 215rpx;
  left: 55rpx;
}
.item-price{
  font-size: 17rpx;
  top: 250rpx;
  left: 90rpx;
}
.footer-btn {
  width: 86%;
  height: 40px;
  background-color: #5869f7;
  color: white;
  font-size: 16px;
  border-color: transparent;
  -webkit-border-radius: 3px;
  border-radius: 3px;
  outline: none;
}
