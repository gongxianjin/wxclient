.header-box {
  height: 85rpx;
  display: flex;
  align-items: center;
  background: -webkit-linear-gradient(to right, rgb(97, 94, 248), rgb(39, 176, 250)); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, rgb(97, 94, 248), rgb(39, 176, 250)); /* 标准的语法 */
}

.header-back {
  z-index: 9;
  margin-left: 24rpx;
  width: 12rpx;
  height: 18rpx;
}

.header-title {
  top: 0;
  z-index: 1;
  position: absolute;
  height: 75rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: white;
}

.header {
  width: 100%;
  height: 60rpx;
  align-items: center;
  font-size: 16rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e9e9e9;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer-btn {
  width: 86%;
  height: 70rpx;
  background-color: #dcdcdc;
  color: white;
  font-size: 30rpx;
  border-color: transparent;
  -webkit-border-radius: 3rpx;
  border-radius: 3rpx;
  outline: none;
}

.footer-btn.active {
  background: -webkit-linear-gradient(to right, rgb(97, 94, 248), rgb(39, 176, 250)); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, rgb(97, 94, 248), rgb(39, 176, 250)); /* 标准的语法 */
}

.form-join {
  background-color: white;
  text-align: center;
  float: left;
  position: absolute;
  top: 90rpx;
}
.from-item-text{
  height: 30rpx;
  width: 40rpx;
}
.form-item {
  line-height: 60rpx;
  width: 90%;
  margin-left: 5%;
  border-bottom: 1rpx solid #e9e9e9;
}

.form-item > label {
  display: inline-block;
  width: 200rpx;
  position: absolute;
  left: 10rpx;

}

.form-item.input > input {
  width: 700rpx;
  height: 110rpx;
  font-size: 35rpx;
  border: none;
  outline: none;
  text-align:center;
}

.form-item:last-child {
  width: 100%;
  margin-left: 0;
}

.form-item:last-child > input[type="radio"] {
  display: inline-block;
  margin-left: 60rpx;
}

.agreement {
  width: 100%;
  height: 200rpx;
  background-color: white;
}

.agreement > p {
  padding-left: 35rpx;
  padding-top: 10rpx;
  float: left;
  position: absolute;
  top: 320rpx;
}

.agreement > view {
  padding: 25rpx;
  color: #999;
  float: left;
  position: absolute;
  top: 370rpx;
}

.success {
  width: 150rpx;
  height: 150rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  display: none;
  margin-left: -75rpx;
  margin-top: -75rpx;
  background: url("../imgs/caozuochenggong@2x.png") no-repeat;
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
  text-align: center;
  line-height: 150rpx;
}

.success > p {
  margin-top: 50rpx;
  color: white;
  font-size: 18rpx;
}
